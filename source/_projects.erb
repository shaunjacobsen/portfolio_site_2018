<div class="row">
  <div class="col">
    <h2><%= t(:projects_header) %></h2>
    <div class="container">
      <div class="row">
        <% data[locale].projects.each_with_index do |project, index| %>
        <div class="col-xs-12">
          <div class="project<%= index % 2 === 1 ? ' flip': '' %>">
            <div class="col-xs-12 col-md-5">
              <div id="project-<%= index %>" class="carousel slide" data-ride="carousel" data-interval="2500">
                <% if project.images.length > 1 %>
                  <ol class="carousel-indicators">
                    <% project.images.each_with_index do |image, img_idx| %>
                      <li data-target="#project-<%= index %>" data-slide-to="<%= img_idx %>" class="<%= img_idx === 0 ? 'active' : '' %>"></li>
                    <% end %>
                  </ol>
                <% end %>
                <div class="carousel-inner">
                  <% project.images.each_with_index do |image, img_idx| %>
                    <div class="carousel-item<%= img_idx === 0 ? ' active' : '' %>">
                      <img class="d-block project__image" src="<%= image.src %>" alt="<%= image.alt %>" />
                    </div>
                  <% end %>
                </div>
                <% if project.images.length > 1 %>
                <a class="carousel-control-prev" href="#project-<%= index %>" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#project-<%= index %>" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
                <% end %>
                </div>
              </div>
              <div class="col-xs-12 col-md-7">
                <div class="project__info">
                <h3><%= project.title %></h3>
                <h4><%= project.subtitle %></h4>
                <p><%= project.body %></p>
                <p>
                  <% project.links.each do |link| %>
                    <a class="btn btn-outline-secondary" href="<%= link.href %>" target="_blank"><%= link.title %></a>
                  <% end %>
                </p>
                </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>