<div class="row">
  <div class="col">
    <div class="contact">
      <h2 style="margin-bottom:32px;"><%= t(:contact_header) %></h2>
      <div style="margin-bottom:32px;">
        <a class="btn btn-outline-secondary" href="https://www.linkedin.com/in/shaun-jacobsen-36176510/" target="_blank"><i class="fab fa-linkedin-in"></i>&nbsp;LinkedIn</a>
        <a class="btn btn-outline-secondary" href="https://github.com/shaunjacobsen" target="_blank"><i class="fab fa-github"></i>&nbsp;GitHub</a>
      </div>
      <div class="container">
        <p><%= t(:contact_paragraph) %> <a href="https://github.com/shaunjacobsen/lambda-personal_website_contact" target="_blank"><%= t(:contact_code_link) %></a></p>
        <form id="form">
          <div id="form-message">
            <div class="alert alert-success" id="success-message"><%= t(:contact_thank_you) %></div>
            <div class="alert alert-danger" id="error-message"><%= t(:contact_error) %></div>
          </div>
          <div class="form-row" id="form-area">
            <div class="form-group col-xs-12 col-sm-6"><input type="text" id="from_name" name="from_name" class="form-control" placeholder="<%= t(:contact_name) %>"></div>
            <div class="form-group col-xs-12 col-sm-6"><input type="email" id="from_email" name="from_email" class="form-control" placeholder="<%= t(:contact_email) %>"></div>
            <div class="form-group col-12"><textarea class="form-control" id="message" name="message" rows="3" placeholder="<%= t(:contact_message) %>"></textarea></div>
            <div class="form-group col-12">
              <div class="g-recaptcha" data-sitekey="6LeSf10UAAAAAF-8A3tLRRE6uWWi7GLvlQaCuXl2"></div>
              <button type="submit" id="submit-form" class="btn btn-lg btn-primary link-colored"><i class="far fa-paper-plane"></i>&nbsp;<%= t(:contact_send) %></button>
              <button type="submit" id="submit-loading" style="display:none;" class="btn btn-lg btn-primary link-colored" disabled><i class="fas fa-spin fa-spinner"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>