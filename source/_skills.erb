<div class="row">
  <div class="col">
    <h2><%= t(:skills_header) %></h2>
    <div class="container">
      <div class="row">
        <% data[locale].skills.each do |skill| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="skill">
            <i class="<%= skill.icon %>"></i>
            <h3><%= skill.title %></h3>
            <p><%= skill.body %></p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>